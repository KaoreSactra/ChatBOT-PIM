<Window x:Class="DesktopSql.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopSql"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <RichTextBox x:Name="rtbChat" Grid.ColumnSpan="2" Margin="0,0,0,43">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnEnviar" Grid.Column="1" Content="Enviar" HorizontalAlignment="Left" Margin="565,399,0,0" VerticalAlignment="Top" Width="101" Height="20" Click="btnEnviar_Click"/>
        <TextBox x:Name="txtMensagem" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="176,400,0,0" TextWrapping="Wrap" Text="Digite sua mensagem..." VerticalAlignment="Top" Width="375"/>

    </Grid>
</Window>
