<Window x:Class="DesktopSql.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopSql"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Right" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Usuário " HorizontalAlignment="Left" Margin="326,145,0,0" VerticalAlignment="Top" Width="50" Height="27" Grid.ColumnSpan="2"/>
        <Label Content="Senha " HorizontalAlignment="Left" Margin="326,199,0,0" VerticalAlignment="Top" Width="41" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Center" Margin="0,172,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="148" Grid.Column="1"/>
        <TextBox x:Name="txtSenha" HorizontalAlignment="Center" Margin="0,225,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="148" Grid.Column="1"/>
        <Button x:Name="btnLogin" Content="Entrar" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" Click="Button_Click" Width="148" Grid.Column="1"/>
    </Grid>
</Window>
