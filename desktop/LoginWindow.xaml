<Window x:Class="DesktopSql.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopSql"
        mc:Ignorable="d"
        Title="SQLBot - Login" Height="600" Width="500"
        Background="#f3f4f6"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#f3f4f6">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <!-- Logo -->
            <TextBlock Text="🤖 SQLBot" FontSize="28" FontWeight="Bold" Foreground="#667eea" TextAlignment="Center" Margin="0,0,0,30"/>
            
            <!-- Title -->
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Foreground="#111827" TextAlignment="Center" Margin="0,0,0,30"/>
            
            <!-- Error Message -->
            <Border x:Name="ErrorBorder" Background="#fee2e2" BorderBrush="#dc2626" BorderThickness="1" CornerRadius="5" Padding="12" Margin="0,0,0,20" Visibility="Collapsed">
                <TextBlock x:Name="ErrorMessage" Foreground="#991b1b" TextWrapping="Wrap"/>
            </Border>
            
            <!-- Email Input -->
            <TextBlock Text="Email:" Foreground="#555555" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBox x:Name="txtEmail" 
                     Height="45" 
                     Padding="12,10"
                     FontSize="14"
                     Background="White"
                     Foreground="#111827"
                     BorderBrush="#ddd"
                     BorderThickness="1"
                     Margin="0,0,0,20"
                     VerticalContentAlignment="Center"
                     TextChanged="TxtEmail_TextChanged"
                     />
            
            <!-- Password Input -->
            <TextBlock Text="Senha:" Foreground="#555555" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
            <PasswordBox x:Name="txtSenha"
                         Height="45"
                         Padding="12,10"
                         FontSize="14"
                         Background="White"
                         Foreground="#111827"
                         BorderBrush="#ddd"
                         BorderThickness="1"
                         Margin="0,0,0,30"
                         VerticalContentAlignment="Center"
                         PasswordChanged="TxtSenha_PasswordChanged"
                         />
            
            <!-- Login Button -->
            <Button x:Name="btnLogin"
                    Content="Entrar"
                    Height="50"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#667eea"
                    BorderThickness="0"
                    Click="BtnLogin_Click"
                    Cursor="Hand"
                    Margin="0,0,0,15"/>
            
            <!-- Register Link -->
            <TextBlock Foreground="#555555" FontSize="14" HorizontalAlignment="Center">
                <Run Text="Não tem conta? "/>
                <Hyperlink x:Name="LinkRegister" Foreground="#667eea" NavigateUri="#" Click="LinkRegister_Click">Registre-se aqui</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
